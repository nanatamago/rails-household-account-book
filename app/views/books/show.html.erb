<h1>詳細</h1>
<div class="container is-container-show">
  <div class="form-buttons">
    <%= link_to books_path, 'aria-label' => '戻る', class:"icon is-back" do %><% end %>
    <%= link_to edit_book_path, 'aria-label' => '編集', class:"icon is-edit" do %><% end %>
	</div>
  <table>
    <tr>
      <th class="table-head is-text-center">年月</th>
      <td class="table-content"><%= @book.year %>年<%= @book.month %>月</td>
    </tr>
    <tr>
      <th class="table-head is-text-center">区分</th>
      <td class="table-content"><%= @book.inout %></td>
    </tr>
    <tr>
      <th class="table-head is-text-center">科目</th>
      <td class="table-content"><%= @book.category %></td>
    </tr>
    <tr>
      <th class="table-head is-text-center">金額</th>
      <td class="table-content"><%= @book.amount %>万円</td>
    </tr>
  </table>
</div>