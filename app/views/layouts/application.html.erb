<!DOCTYPE html>
<html>
  <head>
    <title>HouseholdAccountBook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
   
  </head>

  <body>
    <main class="l-main">
    <% if flash[:notice] %>
    <div class="alert is-alert-success" role="alert">
      <%= flash[:notice] %>
    </div>
    <% end %>
    
    <% if flash[:alert] %>
    <div class="alert is-alert-danger" role="alert">
      <%= flash[:alert] %>
    </div>
    <% end %>
    <%= yield %>
    </main>
  </body>
</html>
